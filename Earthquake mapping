// I'm making a map project documenting Earthquake activity
// I need to add my images

let disasters = [
  {type: "earthquake", x: 200, y: 150, magnitude: 6.5},
  {type: "volcano", x: 400, y: 300, magnitude: 4.2},
  {type: "earthquake", x: 600, y: 220, magnitude: 7.8}
];

function setup() {
  createCanvas(800, 500);
  background(30);
}

function draw() {
  background(20, 30, 50); // I'm adding a dark background so the circles can be seen

  // flat Earth base shape
  fill(70, 120, 180);
  rect(50, 50, 700, 400);

  // Here I'm drawing out disaster points
  for (let d of disasters) {
    let size = d.magnitude * 5; // scale circle size by magnitude
    if (d.type === "earthquake") {
      fill(255, 50, 50, 180); // red for earthquakes
    } else if (d.type === "volcano") {
      fill(255, 150, 0, 180); // orange for volcanoes
    }
    noStroke();
    ellipse(d.x, d.y, size, size);

    // Label
    fill(255);
    textSize(12);
    text(`${d.type} M${d.magnitude}`, d.x + 10, d.y - 10);
  }
}


I'm using a json plugin for the Earthquake data
json quake data https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/2.5_day.geojson

coordinates
let x = map(lon, -180, 180, 0, width);
let y = map(lat, 90, -90, 0, height);


let earthquakes;

function preload() {
  // Load real earthquake data from USGS
  let url = 'https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/2.5_day.geojson';
  earthquakes = loadJSON(url);
}

function setup() {
  createCanvas(800, 400);
  background(20, 30, 50);
}

function draw() {
  background(20, 30, 50);

  // here I'm adding the drawing represebtation of the Earth in a circle
  fill(70, 120, 180);
  rect(0, 0, width, height);

  // Here I'm looping through earthquake features list. Not really sure how to do it so I'm seeing a lot of errors.
  for (let f of earthquakes.features) {
    let coords = f.geometry.coordinates;
    let lon = coords[0];
    let lat = coords[1];
    let mag = f.properties.mag;

    // Convert lat/lon to x/y
    let x = map(lon, -180, 180, 0, width);
    let y = map(lat, 90, -90, 0, height);

    // Draw circle scaled by magnitude
    let size = mag * 5;
    fill(255, 50, 50, 180);
    noStroke();
    ellipse(x, y, size, size);

    // Label with magnitude
    fill(255);
    textSize(10);
    text(`M${mag}`, x + 5, y - 5);
  }
}
